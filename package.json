{
  "name": "imicros-flow",
  "version": "0.2.1",
  "author": "Andreas Leinen <andreas.leinen@imicros.de> (www.imicros.de)",
  "license": "MIT",
  "description": "Moleculer service for loose coupled event handling",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "test-local": "jest --coverage --no-cache --config=local.js",
    "test-travis": "jest test/flow.middleware.spec.js --coverage --no-cache --config=travis.js",
    "test-publisher": "jest test/flow.publisher.spec.js --no-cache",
    "test-static-subscriber": "jest test/flow.static.subscriber.spec.js --no-cache --verbose",
    "test-db": "jest test/db.neo4j.spec.js --no-cache --config=local.js",
    "test-control": "jest test/flow.control.spec.js --no-cache --config=local.js",
    "test-middleware": "jest test/flow.middleware.spec.js --no-cache --config=local.js",
    "test-store": "jest test/flow.store.spec.js --no-cache --config=local.js",
    "test-mapper": "jest test/mapper.spec.js --no-cache",
    "test-size": "jest test/size.spec.js --no-cache",
    "test-serializer": "jest test/serializer.spec.js --no-cache"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js",
      "lib/util/*.js",
        "!**/flow.listener.js",
        "!**/flow.query.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/util/errors.js",
      "/lib/flow.listener.js",
      "/lib/flow.query.js"
    ],
    "rootDir": ".",
    "roots": [
      "./test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al66/imicros-flow.git"
  },
  "keywords": [
    "moleculer",
    "events"
  ],
  "devDependencies": {
    "coveralls": "^3.0.2",
    "jest": "^22.4.3",
    "moleculer": "^0.13.5",
    "nats": "^0.8.10"
  },
  "dependencies": {
    "ioredis": "^4.3.0",
    "kafkajs": "^1.4.6",
    "neo4j-driver": "^1.7.2",
    "uuidv4": "^1.0.1"
  }
}
